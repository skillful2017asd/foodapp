<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/scroll"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi"
                    android:layout_toStartOf="@id/ic_store"
                    android:textSize="20sp"
                    android:id="@+id/tb_name"
                    android:textColor="#DD0F0F"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food and Eat"
                    android:textSize="14sp"
                    android:layout_below="@id/tb_name"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logofood"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/avt_1"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_store"
                    android:layout_toStartOf="@id/avt_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/ic_store"
                    />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_below="@id/ic_store"
                    android:layout_height="220dp"
                    app:lottie_url="https://lottie.host/e9b41214-5d82-491d-b1cd-1e7b4d3d29a3/q13I2D38Z0.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/animationView"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caterogy"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot Trending"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/tv3"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_2"
                        />
                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>